      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>0.05</deepCommonality>
    <deepCountPerPortion>6</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>1</min>
      <max>3</max>
    </deepLumpSizeRange>
